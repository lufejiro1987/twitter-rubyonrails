<%= notice %>

<h1>Este es el index de posts</h1>

<div>
    <%= link_to 'nuevo post', posts_new_path %>
</div>

<% @posts.each do |post| %>
    <div style="display:inline-black; width:200px">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <h5><%= post.autor %></h5>

        <%= link_to 'ver', post %>
    </div>
<% end %>